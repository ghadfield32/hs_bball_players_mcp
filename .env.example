# Application Settings
APP_NAME="HS Basketball Players API"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4

# Rate Limiting (requests per minute per source)
# Set conservative limits - we use 50% of published limits for safety
RATE_LIMIT_EYBL=30           # 30 req/min (assuming 60 req/min actual limit)
RATE_LIMIT_FIBA=20           # 20 req/min (conservative for public API)
RATE_LIMIT_PSAL=15           # 15 req/min (small site, be gentle)
RATE_LIMIT_MN_HUB=20         # 20 req/min
RATE_LIMIT_GRIND_SESSION=15  # 15 req/min
RATE_LIMIT_OTE=25            # 25 req/min
RATE_LIMIT_ANGT=20           # 20 req/min
RATE_LIMIT_OSBA=15           # 15 req/min
RATE_LIMIT_PLAYHQ=25         # 25 req/min (larger platform)
RATE_LIMIT_DEFAULT=10        # 10 req/min (fallback for unknown sources)

# Global rate limiting
GLOBAL_RATE_LIMIT_PER_IP=100  # requests per minute per IP

# Caching
CACHE_ENABLED=true
CACHE_TYPE="file"  # file, redis, memory
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_PLAYERS=3600      # 1 hour
CACHE_TTL_GAMES=1800        # 30 minutes
CACHE_TTL_STATS=900         # 15 minutes
CACHE_TTL_SCHEDULES=7200    # 2 hours

# HTTP Client Settings
HTTP_TIMEOUT=30              # seconds
HTTP_MAX_RETRIES=3
HTTP_RETRY_BACKOFF=2         # exponential backoff multiplier
HTTP_USER_AGENT="Mozilla/5.0 (compatible; HSBasketballStatsBot/0.1; +https://github.com/ghadfield32/hs_bball_players_mcp)"

# Database
DATABASE_URL="sqlite:///./data/basketball_stats.db"
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Data Source Settings
# EYBL
EYBL_BASE_URL="https://nikeeyb.com"
EYBL_ENABLED=true

# FIBA Youth
FIBA_BASE_URL="https://about.fiba.basketball"
FIBA_ENABLED=true

# PSAL (NYC)
PSAL_BASE_URL="https://www.psal.org"
PSAL_ENABLED=true

# Minnesota Basketball Hub
MN_HUB_BASE_URL="https://stats.mnbasketballhub.com"
MN_HUB_ENABLED=true

# Grind Session
GRIND_SESSION_BASE_URL="https://grindsession.com"
GRIND_SESSION_ENABLED=true

# Overtime Elite
OTE_BASE_URL="https://overtimeelite.com"
OTE_ENABLED=true

# NextGen EuroLeague / ANGT
ANGT_BASE_URL="https://www.adidasngt.com"
ANGT_ENABLED=true

# OSBA (Canada)
OSBA_BASE_URL="https://www.osba.ca"
OSBA_ENABLED=false  # Enable when ready to test

# PlayHQ (Australia)
PLAYHQ_BASE_URL="https://www.playhq.com"
PLAYHQ_ENABLED=false  # Enable when ready to test

# Monitoring & Observability
ENABLE_REQUEST_LOGGING=true
ENABLE_METRICS=true
SENTRY_DSN=""  # Optional: Add Sentry DSN for error tracking

# Security
API_KEY_ENABLED=false
API_KEY=""  # Optional: Require API key for requests
CORS_ORIGINS="*"  # Comma-separated list or "*" for all
